    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Aman"/>
        <constructor-arg index="1" value="Male"/>
        <constructor-arg index="2" value="22"/>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie">
        <property name="actor" ref="actor1"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg type="java.lang.String" value="Aman"/>
        <constructor-arg type="java.lang.String" value="Male"/>
        <constructor-arg type="int" value="22"/>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie">
        <property name="actor" ref="actor2"/>
    </bean>

    <bean id="actor" class="com.stackroute.domain.Actor" >
        <constructor-arg name="name" value="jojo"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="22"/>
    </bean>


    <bean name="MovieA,MovieB" class="com.stackroute.domain.Movie"  scope="prototype">
        <property name="actor" ref="actor"/>
    </bean>



</beans>